<%= form_tag "/recipes/#{@recipe.id}", method: :post do %>
	<div>
		<%= label_tag :title %>
		<%= text_field_tag :title, %>
	</div>

	<div>
		<%= label_tag :chef %>
		<%= text_field_tag :chef, %>
	</div>

	<div>
		<%= label_tag :ingredients %>
		<%= text_field_tag :ingredients, %>
	</div>

	<div>
		<%= label_tag :directions %>
		<%= text_field_tag :directions %>
	</div>

	<div>
		<%= label_tag :image %>
		<%= text_field_tag :image,  %>
	</div>

	<%=submit_tag "Update" %>

<% end %>